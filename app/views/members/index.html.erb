<div class="container">
<p id="notice"><%= notice %></p>
<div class="content">
   <h1 class="is-primary has-text-centered">Community members</h1>
</div>
   <%= link_to "Logout", logout_path , class:"button is-info" %>
   <%= link_to "Dashboard", dashboard_path , class:"button is-warning" %>
<table class="table is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Country</th>
      <th>City</th>
      <th>Community</th>
      <th>Community type</th>

      <th>Gender</th>
      <th class="date-cell">Date of Birth</th>
      <th>Phone</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.surname %></td>

        <td><%= member.country %></td>
        <td><%= member.city %></td>
        <td><%= member.community %></td>
        <td><%= member.community_type %></td>

        <td><%= member.gender %></td>
        <td class="date-cell"><%= member.date_of_birth.strftime('%v') %></td>

        <td><%= member.phone %></td>
        <td><%= member.email %></td>

        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path, class: "button is-primary" %>
</div>
