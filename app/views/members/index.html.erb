<p id="notice"><%= notice %></p>

<h1>Community members</h1> <%= link_to "Logout", '/logout' %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>

      <th>Country</th>
      <th>City</th>
      <th>Community</th>
      <th>Community type</th>

      <th>Gender</th>
      <th>Date of birth</th>
      <th>Phone</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.surname %></td>

        <td><%= member.country %></td>
        <td><%= member.city %></td>
        <td><%= member.community %></td>
        <td><%= member.community_type %></td>

        <td><%= member.gender %></td>
        <td><%= member.date_of_birth %></td>

        <td><%= member.phone %></td>
        <td><%= member.email %></td>

        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path, class: "btn btn-primary" %>
